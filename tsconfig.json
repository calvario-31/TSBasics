{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "alwaysStrict": true,
        "outDir": "./dist",
        "moduleResolution": "nodenext",
        "esModuleInterop": true
    },
    "files": ["./src/main.ts"],
    "include": ["./src"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
